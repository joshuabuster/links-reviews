<%- include('../partials/header') %>


<h1>Edit or Delete Your Review</h1>
<br><br>
<h4>Edit Your Review:</h4>
<br>
<form action="/courses/<%= course._id %>/reviews/<%= review._id %>/update?_method=PUT" method="POST">
    <textarea type="text" name="text" class="new-review"><%= review.text %></textarea>
    <br><br>
    <button type="submit" class="submit-btn">Submit</button>
</form>
<br>
<form action="/courses/<%= course._id %>/reviews/<%= review._id %>/delete?_method=DELETE" method="POST">
    <button type="submit" class="delete-btn">Delete Review</button>
</form>


<%- include('../partials/footer') %>